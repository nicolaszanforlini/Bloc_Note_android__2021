<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="themePrincipale" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="themePrincipale.textTitle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="edtText" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="android:inputType">textMultiLine</item>
    </style>

    <style name="btnMenu" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="strokeWidth">@dimen/dim_1</item>
        <item name="strokeColor">@color/black</item>
        <item name="cornerRadius">@dimen/dim_8</item>
    </style>

    <style name="btnNewDoc" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/btnAddDocSize</item>
        <item name="android:layout_width">@dimen/dim_75</item>
        <item name="android:layout_height">@dimen/dim_85</item>
        <item name="cornerRadius">@dimen/btnAddDocSize</item>
        <item name="strokeWidth">@dimen/dim_1</item>
        <item name="strokeColor">@color/black</item>
    </style>

    <style name="btn_del" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">@dimen/dim_50</item>
        <item name="android:layout_height">@dimen/dim_60</item>
        <item name="cornerRadius">@dimen/btnAddDocSize</item>
        <item name="android:padding">@dimen/dim_0</item>
        <item name="iconPadding">@dimen/dim_0</item>
        <item name="strokeWidth">@dimen/dim_1</item>
        <item name="strokeColor">@color/black</item>
    </style>

</resources>