<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView style="@style/themePrincipale.textTitle"
        android:id="@+id/txtTitleActivity2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/title_view_stroke"
        android:text="@string/txtBlocNote"/>

        <com.google.android.material.button.MaterialButton
            style="@style/btn_del"
            android:id="@+id/btnDelete"
            android:layout_margin="@dimen/dim_8"
            app:backgroundTint="@drawable/btn_delete"
            android:layout_below="@id/txtTitleActivity2"
            app:icon="@mipmap/trash_trr_foreground"
            app:iconTint="@color/Transparent"
            app:iconSize="@dimen/dim_70"
            app:iconTintMode="add"
            app:iconGravity="textStart"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtNewDoc"
            android:text="@string/txtNewDoc"
            android:textStyle="italic"
            android:textSize="@dimen/Size"
            android:layout_below="@id/txtTitleActivity2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_Margin"/>

        <com.google.android.material.button.MaterialButton
            style="@style/btnNewDoc"
            android:layout_below="@+id/txtNewDoc"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/btnAddDocPaddingTop"
            android:id="@+id/btnNewDoc"
            android:text="@string/txtBtnNewDoc"
            app:backgroundTint="@drawable/btn_new_doc"
            />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/btnNewDoc"
            android:layout_marginTop="@dimen/_Margin"
            android:layout_marginStart="@dimen/_Margin"
            android:layout_marginEnd="@dimen/_Margin"
            android:id="@+id/tabTxt">
        </TableLayout>


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>